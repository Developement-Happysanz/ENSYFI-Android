<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/new_gray"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp">

            <TextView
                android:id="@+id/group_title_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Title"
                android:background="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/group_lead"
                android:textColor="@color/new_gray"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/group_lead"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:layout_toLeftOf="@+id/group_status"
                android:gravity="center"
                android:text="Lead"
                android:textColor="@color/new_gray"
                android:textSize="16sp"/>

            <RelativeLayout
                android:id="@+id/group_status"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/status_active"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:background="@drawable/ic_group_active"/>

                <ImageView
                    android:id="@+id/status_deactive"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="1dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:background="@drawable/ic_group_deactive"/>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
