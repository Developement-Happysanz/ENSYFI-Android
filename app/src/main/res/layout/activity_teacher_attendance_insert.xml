<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tlbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:minHeight="?attr/actionBarSize" />

        <ImageView
            android:id="@+id/back_res"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:minHeight="?attr/actionBarSize"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_arrow_back_white_48dp" />

        <TextView
            android:id="@+id/tvtitletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:paddingLeft="10dp"
            android:text="Attendance"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbarTextSize" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/classListSpinner"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/tlbar">

        <Spinner
            android:id="@+id/class_list_spinner"
            style="@style/spinner_style"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_list_spinner"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Date and Time" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listOfStudents"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classListSpinner"
        android:background="@color/black">

        <TextView
            android:id="@+id/attendrollnum"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/attendstud"
            android:layout_alignTop="@+id/attendstud"
            android:layout_marginLeft="2dp"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="Roll No."
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/attendstudname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/attendstud"
            android:layout_alignTop="@+id/attendstud"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/attendstud"
            android:layout_toRightOf="@id/attendrollnum"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="Student Name"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/attendstud"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/appColor"
            android:gravity="center"
            android:text="Student Attendance"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ListView
            android:id="@+id/listView_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attendrollnum"
            android:divider="@color/black"
            android:dividerHeight="0dp">

        </ListView>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="120dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_square_fill_color"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="Save" />

</RelativeLayout>