<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:minHeight="?android:attr/actionBarSize" />

        <ImageView
            android:id="@+id/back_res"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/arrow_back"
            android:minHeight="?android:attr/actionBarSize"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_back_white_48dp" />

        <TextView
            android:id="@+id/tvtitletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:minHeight="?android:attr/actionBarSize"
            android:text="New Group"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbarTextSize" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Title                 :"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/group_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_alignTop="@id/group_title"
            android:layout_toRightOf="@id/group_title"
            android:layout_alignLeft="@id/group_lead_spinner"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/lead_type"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Group Lead    :"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/group_title"
            android:layout_marginLeft="20dp"/>


        <Spinner
            android:id="@+id/group_lead_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/lead_type"
            android:layout_alignBottom="@id/lead_type"
            android:layout_toRightOf="@id/lead_type"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/group_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Status             :"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/lead_type"
            android:layout_marginLeft="20dp"/>

        <RadioGroup
            android:id="@+id/radioStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lead_type"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/group_lead_spinner"
            android:layout_alignTop="@id/group_status_txt"
            android:layout_toRightOf="@id/group_status_txt"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioDeactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Deactive"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:theme="@style/MySwitchTheme" />

            <RadioButton
                android:id="@+id/radioActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:theme="@style/MySwitchTheme" />

        </RadioGroup>

        <Button
            android:id="@+id/create_group"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioStatusView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:text="create"
            android:background="@drawable/round_btn"
            android:textColor="@color/colour_pick" />

    </RelativeLayout>

    </LinearLayout>