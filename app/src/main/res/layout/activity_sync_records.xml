<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appColor"
                android:minHeight="?attr/actionBarSize" />

            <ImageView
                android:id="@+id/back_res"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:minHeight="?attr/actionBarSize"
                android:paddingLeft="15dp"
                android:src="@drawable/ic_arrow_back_white_48dp" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/back_res"
                android:minHeight="?attr/actionBarSize"
                android:src="@drawable/ab_logo" />

            <TextView
                android:id="@+id/tvtitletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:minHeight="?attr/actionBarSize"
                android:padding="5dp"
                android:text="SYNC DATA"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/actionbarTextSize" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnSyncAttendanceRecords"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_square_fill_color"
                android:drawableRight="@drawable/ic_sync"
                android:paddingRight="5dp"
                android:text="Sync  "
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnRefreshAttendanceRecords"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btnSyncAttendanceRecords"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_refresh"
                android:drawableRight="@drawable/ic_refresh_active"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Refresh  "
                android:textColor="@color/text_grey"
                android:textSize="18dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnRefreshAttendanceRecords"
                android:layout_alignTop="@+id/btnSyncAttendanceRecords"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Attendance"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/btnRefreshAttendanceRecords"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/disabled_text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSyncClassTestHomeworkRecords"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_square_fill_color"
                android:drawableRight="@drawable/ic_sync"
                android:paddingRight="5dp"
                android:text="Sync  "
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnRefreshClassTestHomeworkRecords"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btnSyncClassTestHomeworkRecords"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_refresh"
                android:drawableRight="@drawable/ic_refresh_active"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Refresh  "
                android:textColor="@color/text_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnRefreshClassTestHomeworkRecords"
                android:layout_alignTop="@+id/btnSyncClassTestHomeworkRecords"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/btnRefreshClassTestHomeworkRecords"
                android:gravity="center|left"
                android:text="Class Test and Homework"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/btnRefreshClassTestHomeworkRecords"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/disabled_text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSyncExamMarks"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_square_fill_color"
                android:drawableRight="@drawable/ic_sync"
                android:paddingRight="5dp"
                android:text="Sync  "
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnRefreshSyncExamMarks"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btnSyncExamMarks"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_refresh"
                android:drawableRight="@drawable/ic_refresh_active"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Refresh  "
                android:textColor="@color/text_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnRefreshSyncExamMarks"
                android:layout_alignTop="@+id/btnSyncExamMarks"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Exam Marks"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/btnRefreshSyncExamMarks"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/disabled_text" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <Button
                android:id="@+id/btnSyncReminder"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_square_fill_color"
                android:drawableRight="@drawable/ic_sync"
                android:paddingRight="5dp"
                android:text="Sync  "
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btnRefreshReminder"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btnSyncReminder"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_refresh"
                android:drawableRight="@drawable/ic_refresh_active"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Refresh  "
                android:textColor="@color/text_grey"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnRefreshReminder"
                android:layout_alignTop="@+id/btnSyncReminder"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Reminder"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/btnRefreshReminder"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/disabled_text" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>