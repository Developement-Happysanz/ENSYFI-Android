<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtExamSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="0.18"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="Computer Science"
            android:textColor="@color/new_gray" />

        <TextView
            android:id="@+id/txtIntGrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"

            android:background="@color/white"
            android:layout_weight="0.20"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="B1"
            android:textColor="@color/new_gray" />

        <TextView
            android:id="@+id/txtIntMark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"

            android:background="@color/white"
            android:gravity="center"
            android:layout_weight="0.20"
            android:paddingBottom="5dp"
            android:text="100"
            android:textColor="@color/new_gray" />

        <TextView
            android:id="@+id/txtExtGrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@id/txtIntMark"
            android:layout_weight="0.20"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="B1"
            android:textColor="@color/new_gray" />

        <TextView
            android:id="@+id/txtExtMark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@id/txtExtGrade"
            android:background="@color/white"
            android:layout_weight="0.20"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="100"
            android:textColor="@color/new_gray" />

        <TextView
            android:id="@+id/txtSubTotalGrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:background="@color/white"
            android:layout_weight="0.20"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="B1"
            android:textColor="@color/new_gray" />

        <TextView
            android:id="@+id/txtSubTotalMark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:background="@color/white"
            android:layout_weight="0.20"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="100"
            android:textColor="@color/new_gray" />

        <TextView
            android:id="@+id/txtSubName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.33"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="12-12-2012"
            android:textColor="@color/new_gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtSubMark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="-"
            android:textColor="@color/new_gray"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

