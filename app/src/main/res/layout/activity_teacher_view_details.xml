<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey">

        <com.palprotech.ensyfi.customview.CircleImageView
            android:id="@+id/img_profile_stud"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile" />

        <LinearLayout
            android:id="@+id/name_roll_disp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_profile_stud"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bala murali krishna"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="22dp" />

            <TextView
                android:id="@+id/txtTeacherId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_disp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/name_roll_disp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/square_btn_border"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/select_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btninfo_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnAttendance"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/ic_admin_stud_info_unselected" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Attendance Info"
                            android:textColor="@color/text_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnfee_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnFees"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/ic_admin_stud_fee_unselected" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Qualification"
                            android:textColor="@color/text_grey"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/select_detail"
                    android:background="@color/black" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_disp"
            android:gravity="center"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btnTeacherTimeTable"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="View Time Table"
                android:textColor="@color/white"
                android:background="@drawable/btn_square_fill_color"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>





