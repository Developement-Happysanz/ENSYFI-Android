<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_margin="10dp"
        android:background="@drawable/shadow_round">

        <TextView
            android:id="@+id/ct_hw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Teacher Name"
            android:textColor="@color/new_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_ct_hw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ct_hw_name"
            android:layout_alignBottom="@id/ct_hw_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ct_hw_name"
            android:gravity="center"
            android:text="ABCD"
            android:textColor="@color/new_gray"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/ct_hw_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ct_hw_name"
            android:layout_alignLeft="@id/ct_hw_name"
            android:layout_marginTop="10dp"
            android:text="Subject"
            android:textColor="@color/new_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_ct_hw_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_ct_hw_name"
            android:layout_alignTop="@id/ct_hw_subject"
            android:layout_toRightOf="@id/ct_hw_subject"
            android:text="000"
            android:textColor="@color/new_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ct_hw_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ct_hw_subject"
            android:layout_alignLeft="@id/ct_hw_name"
            android:layout_marginTop="10dp"
            android:text="Type"
            android:textColor="@color/new_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_ct_hw_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_ct_hw_name"
            android:layout_alignTop="@+id/ct_hw_type"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/ct_hw_type"
            android:text="100"
            android:textColor="@color/new_gray"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/sent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ct_hw_type"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/sent"
                android:src="@drawable/ic_tick" />

            <TextView
                android:id="@+id/sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Sent"
                android:textColor="@color/new_gray" />


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>