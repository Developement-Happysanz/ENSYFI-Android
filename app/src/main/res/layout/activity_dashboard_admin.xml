<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/students"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.50"
                android:background="@drawable/round_btn_plain"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_students" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/students"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/teachers"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.50"
                android:background="@drawable/round_btn_plain"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="top|center"
                    android:background="@drawable/ic_teacher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/teachers"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/parents"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.50"
                android:background="@drawable/round_btn_plain"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="top|center"
                    android:background="@drawable/ic_dashboard_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/parents"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/classes"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.50"
                android:background="@drawable/round_btn_plain"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/ic_class" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="@string/classes"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/exams"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.50"
                android:background="@drawable/round_btn_plain"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="top|center"
                    android:background="@drawable/ic_dashboard_exam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="EXAM"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/results"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.50"
                android:background="@drawable/round_btn_plain"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-5dp"
                    android:background="@drawable/exam" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="@string/result"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/events"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.50"
                android:background="@drawable/round_btn_plain"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="top|center"
                    android:background="@drawable/events" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/events"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/communication"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.50"
                android:background="@drawable/round_btn_plain"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="top|center"
                    android:background="@drawable/communication" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/communication"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>